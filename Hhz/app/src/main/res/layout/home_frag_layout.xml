<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.08"
        android:background="#FF6666"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/home_frag_QRcode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.15"
            android:padding="5dp"
            android:src="@mipmap/icon_scan_top" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_weight="0.7"
            android:src="@mipmap/icon_sou_top" />

        <ImageView
            android:id="@+id/my_map"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.15"
            android:padding="5dp"
            android:src="@mipmap/icon_mes_top" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.92"
        android:background="#ffffff"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/home_frag_RelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v4.view.ViewPager
                    android:id="@+id/home_frag_pager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></android.support.v4.view.ViewPager>

                <RadioGroup
                    android:id="@+id/homefrag_pager_radiogroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal" />
            </RelativeLayout>


            <com.hhzmy.view.MyGridView
                android:id="@+id/home_frag_gv_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:background="#ffffff"
                android:listSelector="#00000000"
                android:numColumns="4"></com.hhzmy.view.MyGridView>

            <com.hhzmy.view.MyListView
                android:id="@+id/home_frag_lv_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:divider="@null"
                android:listSelector="#00000000"></com.hhzmy.view.MyListView>

            <com.hhzmy.view.MyListView
                android:id="@+id/home_frag_lv2_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="#ffffff"
                android:divider="@null"
                android:listSelector="#00000000"></com.hhzmy.view.MyListView>

            <com.hhzmy.view.MyListView
                android:id="@+id/home_frag_lv3_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="#ffffff"
                android:divider="@null"
                android:listSelector="#00000000"></com.hhzmy.view.MyListView>

            <ImageView
                android:id="@+id/home_frag_img_zt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp" />

            <com.hhzmy.view.MyListView
                android:id="@+id/home_frag_lv4_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="#ffffff"
                android:divider="@null"
                android:listSelector="#00000000"></com.hhzmy.view.MyListView>

            <ImageView
                android:id="@+id/home_frag_img_pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp" />

            <com.hhzmy.view.MyListView
                android:id="@+id/home_frag_lv5_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="#ffffff"
                android:divider="@null"
                android:listSelector="#00000000"></com.hhzmy.view.MyListView>

            <ImageView
                android:id="@+id/home_frag_img_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
