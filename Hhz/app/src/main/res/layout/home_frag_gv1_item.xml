    <ImageView
        android:id="@+id/home_frag_gv1_item_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/default_background" />

    <TextView
        android:id="@+id/home_frag_gv1_item_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_frag_gv1_item_img"
        android:layout_centerHorizontal="true"
        android:text="加载中" />
</RelativeLayout>
